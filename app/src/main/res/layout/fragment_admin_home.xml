<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinator Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Big Dashboard Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDashboardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Schools -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddSchool"
                android:layout_width="0dp"
                android:layout_height="170dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#1565C0"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardAddStudent"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_school"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schools"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvSchoolCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvSchoolPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: 0"
                        android:textColor="#F57C00"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvSchoolApproved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved: 0"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvSchoolDeclined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Declined: 0"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="14sp"/>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Students -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddStudent"
                android:layout_width="0dp"
                android:layout_height="170dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#2E7D32"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardAddSchool"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_students"
                        app:tint="#2E7D32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coordinators"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/tvCoordinatorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvCoordinatorPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: 0"
                        android:textColor="#F57C00"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvCoordinatorApproved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved: 0"
                        android:textColor="#2E7D32"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvCoordinatorDeclined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Declined: 0"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Appointments -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAppointments"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#F57C00"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardAddSchool"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardBilling"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_appoinments"
                        app:tint="#F57C00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appointments"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvAppointmentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Today"
                        android:textColor="#F57C00"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Billing -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBilling"
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#D32F2F"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardAddStudent"
                app:layout_constraintStart_toEndOf="@id/cardAppointments"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bills"
                        app:tint="#D32F2F" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billing"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvBillingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 Pending"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
