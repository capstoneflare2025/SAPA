<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- Allocations Header with Back Icon at the Start and Title Centered -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp">

        <!-- Back Icon (placed at the start) -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back Icon"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"/>

        <!-- Title Text (Centered) -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Section &amp; Allocation\n with Time Slot and Billing"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Allocation Name Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/allocationsInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Allocation Name"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/allocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Section Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sectionInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Section"
        app:layout_constraintTop_toBottomOf="@id/allocationsInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/allocationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Time Slot Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/timeSlotInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Time Slot (e.g., 9AM - 12PM)"
        app:layout_constraintTop_toBottomOf="@id/sectionInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Billing Information Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/billingInfoInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Billing Information"
        app:layout_constraintTop_toBottomOf="@id/timeSlotInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/billingInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="2"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to add new allocation -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddAllocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Allocation"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/billingInfoInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"/>

    <!-- RecyclerView Card (Inside Material CardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recyclerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnAddAllocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerAllocation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="8dp"
            android:clipToPadding="false"/>
    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:text="Save" />

</androidx.constraintlayout.widget.ConstraintLayout>
